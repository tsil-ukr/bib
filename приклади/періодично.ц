взяти біб турбо;
взяти біб Друк;

дія обробник_періодичного(турбіна: адреса<турбо::Турбіна>, періодичне: адреса<турбо::Періодичне>, аргумент: невідома_адреса, скасовано: логічне, успішно: логічне, код_помилки: ц32) {
  якщо скасовано {
    біб::надрукувати_ю8(ю8"скасовано");
  } інакше якщо успішно {
    біб::надрукувати_ю8(ю8"період");
//    турбо::скасувати_періодичне(турбіна, періодичне);
  } інакше {
    біб::надрукувати_ю8(ю8"періодичне не вдалось");
  }
}

дія старт(): ц32 {
  ціль виділяч = біб::отримати_системний_виділяч();

  ціль турбіна = турбо::створити_турбіну(виділяч);

  ціль періодичне = турбо::виконувати_періодично(турбіна, 1000, обробник_періодичного, пусто);
  якщо періодичне == пусто {
    біб::надрукувати_ю8(ю8"періодичне не вдалось");
  } інакше {
    біб::надрукувати_ю8(ю8"успішно періодичне");
  }

  змінна помилка_турбіни = турбо::ПомилкаВідкликуТурбіни { ... };

  турбо::запустити_турбіну(турбіна, пусто, пусто, пусто, помилка_турбіни::адреса);

  турбо::знищити_турбіну(турбіна);

  вернути 0;
}